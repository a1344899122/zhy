@CHARSET "UTF-8";

*{
	outline: none !important; 
}

body,html{
	overflow: hidden !important;
}

/* 整体框架 */
.primary-bgcolor .main-content{
	height:100%;
}

/* 头部 */
.primary-bgcolor .main-content .top-content{
    position: relative;
    z-index: 900 ;
    min-height: 50px;
    background-color: #2c63ff !important;  
}

/* 头部导航栏 */
.primary-bgcolor .main-content .top-content .navbar.navbar-default{
	margin-bottom: 0px;
	background-color: #2c63ff !important;  
	border: 0px;
}
/* 头部导航栏 a */
.primary-bgcolor .main-content .top-content > nav > .container-fluid > .collapse.navbar-collapse > ul > li > a{
	height:50px;
	cursor:pointer;
	color:#fff !important;
	border-right: 1px solid #1846c8;
	background-color: transparent;
	font-size: 16px !important;
}
.primary-bgcolor .main-content .top-content > nav > .container-fluid > .collapse.navbar-collapse > ul > li > a .glyphicon{
	font-size: 16px !important;
}

.primary-bgcolor .main-content .top-content nav  ul:FIRST-CHILD > li:FIRST-CHILD  > a:FIRST-CHILD{
	border-left: 1px solid #1846c8;
}
/* 顶部自动折叠按钮样式 start */
.primary-bgcolor .main-content .top-content nav .navbar-toggle{
	border-radius:0;
	border:0px;
	background-color: #1846c8 !important;
}

.primary-bgcolor .main-content .top-content .navbar-default .navbar-collapse,
.primary-bgcolor .main-content .top-content .navbar-default .navbar-form{
	border-color: #333 !important;
}

.primary-bgcolor .main-content .top-content nav .icon-bar{
	background-color: #2c63ff;
}
.primary-bgcolor .main-content .top-content nav  .navbar-toggle:hover,
.primary-bgcolor .main-content .top-content nav  .navbar-toggle:focus {
    background-color: #223865 !important;
}
@media (max-width: 767px){
	.primary-bgcolor .main-content .top-content .dropdown-menu .divider{
		background-color:rgb(74, 70, 70) !important;
	}
	.primary-bgcolor .main-content .top-content .navbar-default  .navbar-nav  .open .dropdown-menu > li > a {
	   color:#fff !important;
	   padding-left: 50px;
	}
	.primary-bgcolor .main-content .top-content .navbar-default  .navbar-nav  .open .dropdown-menu > li > a:HOVER,
	.primary-bgcolor .main-content .top-content .navbar-default  .navbar-nav  .open .dropdown-menu > li > a:FOCUS{
	   background-color:#1846c8 !important;
	}
}

/* 顶部自动折叠按钮样式 end */
	
/* 头部导航栏 a */
.primary-bgcolor .main-content .top-content > nav > .container-fluid > .collapse.navbar-collapse > ul > li > a:HOVER,
.primary-bgcolor .main-content .top-content > nav > .container-fluid > .collapse.navbar-collapse > ul > li > a:FOCUS ,
.primary-bgcolor .main-content .top-content > nav > .container-fluid > .collapse.navbar-collapse > ul > li > a:ACTIVE,
.primary-bgcolor .main-content .top-content > nav > .container-fluid > .collapse.navbar-collapse > ul > li.active{
	background-color:#1846c8 !important;
}

/* 头部导航栏 字体logo */
.primary-bgcolor .main-content .top-content nav  .logofont,
.primary-bgcolor .main-content .top-content nav  .logofont:FIRST-CHILD{
	color: #fff !important;
    font-size: 22px !important;
    font-weight: 400 !important;
    padding-right: 50px !important;
}
.primary-bgcolor .main-content .top-content nav  .logofont .fa{
	color: #fff !important;
    font-size: 22px !important;
    font-weight: 400 !important;
}

/* 左侧菜单 */
.primary-bgcolor .main-content .left-content{
	height: 100%;
    float: left;
    position: absolute;
    z-index: 300;
    width: 240px;
	 
}
/* 向左的折叠按钮 */
.primary-bgcolor .main-content .left-content .fold-left{
    text-align: right;
    right: 0;
    position: absolute;
    top: 50%;
    z-index: 900;
    height: 51px;
    width: 16px;
    cursor: pointer;
}
/* 向右的折叠按钮 */
.primary-bgcolor .main-content .left-content .fold-right{
    position: absolute;
    text-align: right;
    right: -16px;
    top: 50%;
    z-index: 900;
    height: 51px;
    width: 16px;
    cursor: pointer;
    display: none;
}
.primary-bgcolor .main-content .left-content img{
	width: 100%;
	height: 100%;
}
/* 左侧菜单拖动条 */
.primary-bgcolor .main-content .left-content .resizeable{
 	 top:0px;
 	 left:239px;
     position: absolute;
	 border-left: 1px solid #ccc; 
	 padding-left:10px;
	 cursor: e-resize;
	 z-index: 2;
}

/* 左侧菜单主题色 */

/* 左侧菜单背景色 */
.primary-bgcolor .main-content .left-content .sidebar{
    background-color: #fafafa;
    height: 100%;
    overflow:auto;
}

/* 左侧一级菜单所有a标签 */
.primary-bgcolor .main-content .left-content  .sidebar  ul > li a{
	 color: #333;
	 text-decoration: none;
	 border-bottom:1px solid #dce3ed;    /* 新增样式  */
	 font-size:  16px !important;
}

/* 左侧一级菜单a标签*/
.primary-bgcolor .main-content .left-content .sidebar  ul > li >a{
	 color: #333;
	 padding-left: 25px;
}

/* 左侧菜单li鼠标悬浮状态 */
.primary-bgcolor .main-content .left-content  .sidebar ul > li{
	cursor: pointer
}
/* 左侧菜单li鼠标悬浮状态 */
.primary-bgcolor .main-content .left-content .nav > li > a:hover, .nav > li > a:focus{
	background-color: #d1daed;
	color:#fff;
}

/* 左侧一级菜单小尖角 */
.primary-bgcolor .main-content .left-content .sidebar ul > li > a> .fa-caret-right,
.primary-bgcolor .main-content .left-content .sidebar ul > li > a>.fa-caret-down{
    position: absolute;
    top: 12px;
    left: 15px;
    z-index:100;
}

/* 左侧二级菜单小尖角 */
.primary-bgcolor .main-content .left-content .sidebar ul > li > ul > li > a>.fa-caret-right,
.primary-bgcolor .main-content .left-content .sidebar ul > li > ul > li > a>.fa-caret-down{
    position: absolute;
    top: 12px;
    left: 30px;
    z-index:100;
}

/* 左侧菜单活动 */
.primary-bgcolor .main-content .left-content  .sidebar ul > li  .actived{
   background:#2c63ff !important; 
   color:white !important;
   z-index: 3; /* 拖动条的z-index是2，目的是覆盖拖动条的z-index */

} 
 
 /* 左侧二级菜单a */
.primary-bgcolor .main-content .left-content .sidebar  ul > li > ul >li >a{
    padding-left:40px;
    border-bottom:1px solid #eee;    /* 新增样式  */
}
 /* 左侧三级菜单a */
.primary-bgcolor .main-content .left-content  .sidebar ul > li > ul > li >ul > li > a {
	 padding-left: 55px;
	 border:none;
}
/* 左侧三级菜单a里面的图标 */
.primary-bgcolor .main-content .left-content .sidebar ul > li > ul > li >ul > li > a i{
	color:#fff;
	margin-top: 3px;
}

/* 一级ul */
.primary-bgcolor .main-content .left-content .sidebar ul{
	background:#f4f6fa;
}
/* 二级ul */
.primary-bgcolor .main-content .left-content .sidebar li > ul{
	background-color: gainsboro;
	background:#fafafa;    /* 新增样式  */
}

/* 三级ul */
.primary-bgcolor .main-content .left-content .sidebar li > ul >li >ul{
	background-color:#fff;
	border-bottom:1px solid #e5e5e5;    /* 新增样式  */
}

/* 工作区域默认选中色 */
.primary-bgcolor .main-content .left-content .sidebar  ul > li > #workArea {
	 background-color: #fafafa  !important;
	 text-align: center;
	 height: 170px;
	 z-index: 1;
	 cursor: auto;
	 padding: 9px 25px;
}

/* 工作区域默认悬浮色 */
.primary-bgcolor .main-content .left-content .sidebar ul > li> #workArea:hover{
	 height: 170px;
	 background-color: #d1daed  !important;
	 color:black !important;
}
 

/* 右侧内容 */
.primary-bgcolor .main-content .right-content{
   float:right;
   padding-right:0px;
   padding-left:0px;
   position: relative;
   top:0;
   right:0;
}
