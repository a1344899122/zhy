@CHARSET "UTF-8";
.modal.fade{
	overflow-x:auto;
	overflow-y:hidden;
}
.modal-dialog{
	width:100%;
	height:100%;
	margin: 0px;
}


.modal-content{
	width:100%;
	/* height:100%; */
	border:none;
}
.modal-header{
	background-color: #1846c8 !important;
	border-radius: 5px 5px 0 0;
	padding: 10px 15px 0 15px;
}

.modal-headerD{
	float:right;
	padding-right:5px !important;
}
.modal-title{
	font-size: 16px !important;
	color: #fff;
	font-weight: bold;
}
.modal-body{
	background: #fff;
	overflow-x:auto;
	overflow-y:hidden;
	padding:0 !important;
}

.modal-body.modal-alert{
	overflow-x:auto;
	overflow-y:hidden;
	margin:10px;
}

.modal-footer{
	height:55px;
	padding-top:10px;
	background-color:#eee;
	border-top:1px solid #ccc;
	margin-top: 0px;
}


/* 进度条的div */
#loadinD{
	position:absolute !important;
	top:50% !important;
	left:50% !important;
	margin-left: -140px !important;
}


/* 右上角关闭按钮 */
#rightTopBtn{
	color:#fff !important;
	padding-left:10px !important;
}

